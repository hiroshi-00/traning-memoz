<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title user-name">
      <% if user_signed_in? %>
        <%= link_to tweet.user.username, user_path(tweet.user) %>
      <% else %>
        <%= tweet.user.username %>
      <% end %>
      <small class = "text-secondary user-time">更新日：<%= tweet.updated_at.strftime("%Y-%m-%d %H:%M")%></small>
    </h5>
    <p class="card-text"><%= tweet.title %></p>
    <hr>
    
    <!--indexの場合-->
    <% if request.path == "/tweets" %>
      <p class="card-text"><%= simple_format truncate(tweet.body, length: 150, omission: ".....") %></p>
      <%= link_to '続きを読む', tweet, class: "btn btn-outline-primary" %>
      
      <% if user_signed_in? %>
        <% if tweet.favorited_by?(current_user) %>
          <p><span><%= image_tag 'good.png', class: 'nice-btn' %></span>
            <%=link_to tweet.favorites.count, tweet_favorites_path(tweet.id), method: :delete %>
          </p>
        <% else %>
          <p><span><%= image_tag 'no_good.png', class: 'nice-btn' %></span>
            <%=link_to tweet.favorites.count, tweet_favorites_path(tweet.id), method: :post %>
          </p>
        <% end %>
      <% else %>
        <p><span>お気に入り数: </span><%= tweet.favorites.count %></p>
      <% end %>
      
      <% if current_user != tweet.user %>
        <% if tweet.user.followed_by?(current_user) %>
          <p><%=link_to "フォロー済み", user_relationships_path(tweet.user.id), method: :delete %></p>
        <% else %>
          <p><%=link_to "フォローする", user_relationships_path(tweet.user.id), method: :post %></p>
        <% end %>
      <% end %>
      
    <!--showの場合-->
    <% else %>
      <p class="card-text"><%= simple_format tweet.body %></p>
      
      <% if user_signed_in? %>
        <% if tweet.favorited_by?(current_user) %>
          <p><span><%= image_tag 'good.png', class: 'nice-btn' %></span>
            <%=link_to tweet.favorites.count, tweet_favorites_path(tweet.id), method: :delete %>
          </p>
        <% else %>
          <p><span><%= image_tag 'no_good.png', class: 'nice-btn' %></span>
            <%=link_to tweet.favorites.count, tweet_favorites_path(tweet.id), method: :post %>
          </p>
        <% end %>
      <% else %>
        <p><span>お気に入り数: </span><%= tweet.favorites.count %></p>
      <% end %>
      
    <% end %>
    <% if user_signed_in? %>
      <!--ログインユーザーの場合-->
      <% if tweet.user_id == current_user.id %>
        <%= link_to '編集', edit_tweet_path(tweet), class: "btn btn-outline-primary" %>
        <%= link_to '削除', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
      <% end %>
    <% end %>
    <%= link_to "戻る", tweets_path, class: "btn btn-outline-dark" %>
  </div>
</div>


